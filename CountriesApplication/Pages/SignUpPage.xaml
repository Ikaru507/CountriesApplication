<Page x:Class="CountriesAppliction.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid  Background="#1E1E2E">

        <Image Stretch="Fill" Source="C:\Users\User\source\repos\CountriesApplication\CountriesApplication\Pictures\unnamed (1).jpg"/>
        <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Create Account"
                               Foreground="DarkGreen"
                               FontSize="50"
                               FontWeight="Bold"
                                FontFamily="/Fonts/#Caveat"
                               Margin="200,0,0,20" Width="451"/>
                <TextBlock Text="UserName" FontSize="20" Width="200" Foreground="DarkGreen"  Margin="0,0,0,0" FontFamily="/Fonts/#DynaPuff"/>
                <TextBox x:Name="UserNameBox" Background="Transparent" Width="200" Height="25" Margin="0,5"  FontFamily="/Fonts/#DynaPuff" />

                <TextBlock Text="Phone Number" Margin="0,0,-40,0" Foreground="ForestGreen" FontSize="20" Width="230" FontFamily="/Fonts/#DynaPuff"/>
                <TextBox x:Name="PhoneBox" Height="25" Margin="0,5"  FontFamily="/Fonts/#DynaPuff" Background="Transparent" Width="200"/>

                <TextBlock Text="Date of Birth" Foreground="DarkGreen" FontSize="20" Width="200" FontFamily="/Fonts/#DynaPuff"/>
                <DatePicker x:Name="DobPicker" Height="25" Margin="0,5"  FontFamily="/Fonts/#DynaPuff" Background="Transparent" Width="200"/>

                <TextBlock Text="Email" Foreground="ForestGreen" FontSize="20" Width="200" FontFamily="/Fonts/#DynaPuff"/>
                <TextBox x:Name="EmailBox" Height="25" Margin="0,5"  FontFamily="/Fonts/#DynaPuff" Background="Transparent" Width="200"/>

                <TextBlock Text="Confirm Email" Margin="0,0,-40,0" Foreground="DarkGreen" FontSize="20" Width="240" FontFamily="/Fonts/#DynaPuff"/>
                <TextBox x:Name="ConfirmEmailBox" Height="25" Margin="0,5"  FontFamily="/Fonts/#DynaPuff" Background="Transparent" Width="200"/>

                <TextBlock Text="Password" Foreground="ForestGreen" FontSize="20" Width="200" FontFamily="/Fonts/#DynaPuff"/>
                <PasswordBox x:Name="PasswordBox" Height="25" Margin="0,10"  FontFamily="/Fonts/#DynaPuff" Background="Transparent" Width="200"/>
                <WrapPanel Margin="20" Width="200">
                    

                    <Button Content="← Back"
                            Margin="0,0,0,0"
                            Background="Transparent"
                            Foreground="ForestGreen"
                            BorderThickness="0"
                             FontFamily="/Fonts/#DynaPuff"
                            Click="Back_Click"/>
                    <Button Content="Sign Up"
        Height="40"
        Width="80"
        Background="Transparent"
        Foreground="DarkGreen"
        BorderThickness="0"
                            Margin="70,0,0,0"
         FontFamily="/Fonts/#DynaPuff"
        Click="SignUp_Click"/>
                </WrapPanel>
            </StackPanel>
            </ScrollViewer>
        
    </Grid>
</Page>
