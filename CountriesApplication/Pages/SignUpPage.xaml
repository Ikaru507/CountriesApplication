<Page x:Class="CountriesAppliction.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1E1E2E">

        <Image Stretch="Fill" Source="C:\Users\User\source\repos\CountriesApplication\CountriesApplication\Pictures\Gemini_Generated_Image_gk9q1ugk9q1ugk9q.png"/>
        <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Create Account 🚀"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Full Name" Foreground="White"/>
                    <TextBox x:Name="FullNameBox" Height="35" Margin="0,5"/>

                    <TextBlock Text="Phone Number" Foreground="White"/>
                    <TextBox x:Name="PhoneBox" Height="35" Margin="0,5"/>

                    <TextBlock Text="Date of Birth" Foreground="White"/>
                    <DatePicker x:Name="DobPicker" Height="35" Margin="0,5"/>

                    <TextBlock Text="Email" Foreground="White"/>
                    <TextBox x:Name="EmailBox" Height="35" Margin="0,5"/>

                    <TextBlock Text="Confirm Email" Foreground="White"/>
                    <TextBox x:Name="ConfirmEmailBox" Height="35" Margin="0,5"/>

                    <TextBlock Text="Password" Foreground="White"/>
                    <PasswordBox x:Name="PasswordBox" Height="35" Margin="0,10"/>

                    <Button Content="Sign Up"
                            Height="40"
                            Background="#764ba2"
                            Foreground="White"
                            BorderThickness="0"
                            Click="SignUp_Click"/>

                    <Button Content="← Back"
                            Margin="0,10,0,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Click="Back_Click"/>
                </StackPanel>
            </ScrollViewer>
        
    </Grid>
</Page>
