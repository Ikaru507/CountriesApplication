<Page x:Class="CountriesApplication.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Purple" Offset="0"/>
                <GradientStop Color="Purple" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Stretch="Fill" Source="C:\Users\User\source\repos\CountriesApplication\CountriesApplication\Pictures\aaaaaaaaaaaaaaaaaaaaaaa.jpg"/>
        <StackPanel>
            <TextBlock Text="Welcome to TerraMap"
                           Foreground="Purple"
                           FontSize="60"
                           FontWeight="Bold"
                           FontFamily="/Fonts/#Caveat"
                           HorizontalAlignment="Center"
                           Margin="0,90,-200,30"/>

            <Button
    Content="Log In"
    Width="150"
    Height="55"
    FontSize="40"
    Margin="0,0,-200,15"
    Background="Transparent"
    Foreground="MediumPurple"
    BorderThickness="0"
                
    FontFamily="/Fonts/#DynaPuff"
    Click="LogIn_Click">

                <!-- Scale transform for animation -->
                <Button.RenderTransform>
                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                <!-- Animation trigger -->
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleX"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>

                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleY"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button
    Content="Sign Up"
    FontSize="40"
                
    Margin="0,20,-200,15"
    Background="Transparent"
    Foreground="MediumPurple"
    BorderThickness="0"
               
    FontFamily="/Fonts/#DynaPUFF"
    Click="SignUp_Click" Width="150" Height="55">

                <!-- Scale transform for animation -->
                <Button.RenderTransform>
                    <ScaleTransform x:Name="scale2" ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                <!-- Click animation -->
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleX"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>

                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleY"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Page>