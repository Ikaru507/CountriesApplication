<Page x:Class="CountriesApplication.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Purple" Offset="0"/>
                <GradientStop Color="Purple" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Stretch="Fill" Source="C:\Users\User\source\repos\CountriesApplication\CountriesApplication\Pictures\earthhhhhhhh.jpg"/>
        <StackPanel>
            <TextBlock Text="Welcome to TerraMap"
                           Foreground="Purple"
                           FontSize="40"
                           FontWeight="Bold"
                       FontFamily="/Fonts/#DynaPuff"
                           HorizontalAlignment="Center"
                           Margin="0,120,-300,30"/>

            <Button
    Content="Log In"
    Width="150"
    Height="45"
    FontSize="30"
    Margin="0,0,-300,15"
    Background="Transparent"
    Foreground="MediumPurple"
    BorderThickness="0"
    FontFamily="/Fonts/#DynaPuff"
    Click="LogIn_Click">

                <!-- Scale transform for animation -->
                <Button.RenderTransform>
                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                <!-- Animation trigger -->
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleX"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>

                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleY"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button
    Content="Sign Up"
    FontSize="30"
    Margin="0,20,-300,15"
    Background="Transparent"
    Foreground="MediumPurple"
    BorderThickness="0"
    FontFamily="/Fonts/#DynaPuff"
    Click="SignUp_Click" Width="150" Height="45">

                <!-- Scale transform for animation -->
                <Button.RenderTransform>
                    <ScaleTransform x:Name="scale2" ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                <!-- Click animation -->
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleX"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>

                                <DoubleAnimation
                        Storyboard.TargetName="scale"
                        Storyboard.TargetProperty="ScaleY"
                        To="1.1"
                        Duration="0:0:0.1"
                        AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Page>