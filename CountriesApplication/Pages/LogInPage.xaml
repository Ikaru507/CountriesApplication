<Page x:Class="CountriesApplication.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1E1E2E">
        <Image Stretch="Fill" Source="C:\Users\User\source\repos\CountriesApplication\CountriesApplication\Pictures\baaaaaaaaaaaaaaa.jpg"/>
        <StackPanel>
            <TextBlock Text="Login 🔐"
                           Foreground="LightGreen"
                           FontSize="40"
                       Width="200"
                           FontWeight="Bold"
                       FontFamily="/Fonts/#Caveat"
                           Margin="0,5,0,20"/>

            <TextBlock Text="Username" FontFamily="/Fonts/#DynaPUFF" Foreground="DarkSeaGreen" Width="250"/>
            <TextBox x:Name="UsernameBox"
                         Height="35"
                     Width="250"
                         Margin="0,5,0,15"/>

            <TextBlock Text="Password" FontFamily="/Fonts/#dYNApuff" Width="250" Foreground="DarkSeaGreen"/>
            <PasswordBox x:Name="PasswordBox"
                             Height="35"
                         Width="250"
                             Margin="0,5,0,25"/>

            <Button Content="Login"
                        Height="40"
                        Background="Transparent"
                        Foreground="LightBlue"
                    Width="250"
                    FontSize="20"
                    Margin="0,-20,0,0"
                    FontFamily="/Fonts/#DynaPUFF"
                        BorderThickness="0"
                        Click="Login_Click"/>

            <Button Content="Back"
                        Margin="0,10,0,0"
                    FontSize="20"
                    Width="250"
                         Background="Transparent"
                        Foreground="LightBlue"
                    FontFamily="/Fonts/#DynaPUFF"
                        BorderThickness="0"
                        Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
