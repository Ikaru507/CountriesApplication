<Page x:Class="CountriesApplication.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1E1E2E">
        <Border Width="320"
                Padding="25"
                CornerRadius="20"
                Background="#2D2D44"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Login 🔐"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Username" Foreground="White"/>
                <TextBox x:Name="UsernameBox"
                         Height="35"
                         Margin="0,5,0,15"/>

                <TextBlock Text="Password" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Margin="0,5,0,25"/>

                <Button Content="Login"
                        Height="40"
                        Background="#667eea"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Login_Click"/>

                <Button Content="← Back"
                        Margin="0,10,0,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Back_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
